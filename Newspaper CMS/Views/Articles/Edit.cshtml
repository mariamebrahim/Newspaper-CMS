@model Newspaper_CMS.Models.Article

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article_ID" />
            <div class="form-group">
                <label asp-for="Article_Title" class="control-label"></label>
                <input asp-for="Article_Title" class="form-control" />
                <span asp-validation-for="Article_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_Description" class="control-label"></label>
                <input asp-for="Article_Description" class="form-control" />
                <span asp-validation-for="Article_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Writer_Name" class="control-label"></label>
                <input asp-for="Writer_Name" class="form-control" />
                <span asp-validation-for="Writer_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_PublishDate" class="control-label"></label>
                <input asp-for="Article_PublishDate" class="form-control" />
                <span asp-validation-for="Article_PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article_Active" class="control-label"></label>
                <input asp-for="Article_Active" class="form-control" />
                <span asp-validation-for="Article_Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_Name" class="control-label"></label>
                <input asp-for="Category_Name" class="form-control" />
                <span asp-validation-for="Category_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
